<div>
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row"><%= f.label :first_name, class: 'span3' %>
  <%= f.text_field :first_name, class: 'span3' %></div>

  <div class="row"><%= f.label :last_name, class: 'span3' %>
  <%= f.text_field :last_name, class: 'span3' %></div>

  <div class="row"><%= f.label :email, class: 'span3' %>
  <%= f.email_field :email, class: 'span3' %></div>

  <div class="row"><%= f.label :password, class: 'span3' %>
  <%= f.password_field :password, class: 'span3' %></div>

  <div class="row"><%= f.label :password_confirmation, class: 'span3' %>
  <%= f.password_field :password_confirmation, class: 'span3' %></div>

  <div class="row"><%= f.submit "Sign up" %></div>
<% end %>
</div>

<%= render "devise/shared/links" %>
