<div>
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row"><%= f.label :email, class: 'span3' %>
  <%= f.email_field :email, class: 'span3' %></div>

  <div class="row"><%= f.label :first_name, class: 'span3' %>
  <%= f.text_field :first_name, class: 'span3'  %></div>

  <div class="row"><%= f.label :last_name, class: 'span3' %>
  <%= f.text_field :last_name, class: 'span3' %></div>

  <div class="row"><%= f.label :password, class: 'span3' %> 
    <%= f.password_field :password, :autocomplete => "off", class: 'span3' %>
    <i>(leave blank if you don't want to change it)</i>
  </div>

  <div class="row"><%= f.label :password_confirmation, class: 'span3' %>
  <%= f.password_field :password_confirmation, class: 'span3' %></div>

  <div class="row"><%= f.label :current_password, class: 'span3' %>
    <%= f.password_field :current_password, class: 'span3' %>
    <i>(we need your current password to confirm your changes)</i>
  </div>

  <div class="row"><%= f.submit "Update" %></div>
<% end %>
</div>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>

<%= link_to "Back", :back %>
